@model CbWebApp.Models.TarefaViewModel

@{
    ViewData["Title"] = "AddTarefa";
}

<h2>Tarefas</h2>

<h4>Adcionar</h4>
<hr />

<div class="col-md-4">
    <form asp-action="AddTarefa" asp-controller="Tarefa" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="Completa" /> @Html.DisplayNameFor(model => model.Completa)
                </label>
            </div>
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#confirm-criar" aria-hidden="true">Criar</button>
        </div>

        <div class="modal fade" id="confirm-criar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="vertical-alignment-helper">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title" id="myModalLabel">Confirmar operação</h4>
                        </div>
                        <div class="modal-body">
                            Tem certeza que deseja Criar?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                            <input type="submit" value="Salvar" class="btn btn-danger" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Tarefa">Voltar a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
